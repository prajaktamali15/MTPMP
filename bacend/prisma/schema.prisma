generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  users     User[]
  projects  Project[]
  invitations Invitation[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  password       String?
  provider       String?      // 'google' | 'local'
  googleId       String?
  name           String?
  role           UserRole     @default(MEMBER)
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  tasksAssigned  Task[]       @relation("UserAssignee")
  invitations    Invitation[] @relation("UserInvitations")
  comments       Comment[]
  files          File[]
  activityLogs   ActivityLog[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Project {
  id             String   @id @default(uuid())
  name           String
  description    String?
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  tasks          Task[]
  files          File[]
  activityLogs   ActivityLog[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(OPEN)
  priority    Int?
  dueDate     DateTime?
  project     Project    @relation(fields: [projectId], references: [id])
  projectId   String
  assignee    User?      @relation("UserAssignee", fields: [assigneeId], references: [id])
  assigneeId  String?
  subtasks    Subtask[]
  comments    Comment[]
  files       File[]
  activityLogs ActivityLog[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
  GUEST
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
  BLOCKED
}

model Invitation {
  id             String   @id @default(uuid())
  email          String
  role           UserRole
  token          String   @unique
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  invitedBy      User     @relation("UserInvitations", fields: [invitedById], references: [id])
  invitedById    String
  expiresAt      DateTime @default(dbgenerated("NOW() + interval '24 hours'"))
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Subtask {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(OPEN)
  task        Task       @relation(fields: [taskId], references: [id])
  taskId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id          String       @id @default(uuid())
  name        String
  path        String
  size        Int
  mimeType    String
  uploadedBy  User         @relation(fields: [uploadedById], references: [id])
  uploadedById String
  project     Project?     @relation(fields: [projectId], references: [id])
  projectId   String?
  task        Task?        @relation(fields: [taskId], references: [id])
  taskId      String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ActivityLog {
  id          String   @id @default(uuid())
  action      String
  description String?
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  project     Project? @relation(fields: [projectId], references: [id])
  projectId   String?
  task        Task?    @relation(fields: [taskId], references: [id])
  taskId      String?
  createdAt   DateTime @default(now())
}